<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/primaryLightColor"
    style="@style/PetTheme"
    tools:context=".ui.Registro.Registro2Activity">

    <LinearLayout
        android:background="@drawable/backuiwhite"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView
            android:layout_width="140dp"
            android:layout_height="60dp"
            android:background="@drawable/logo_0"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="2"
        android:gravity="center"
        android:padding="20dp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Registrate"
            android:textColor="@color/white"
            android:textSize="25sp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.9"
            android:layout_marginTop="10dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/secondaryTextColor"
                android:layout_marginTop="5dp"
                android:text="Seleccione su ubicacion"
                android:textSize="18sp"/>
            <TextView
                android:id="@+id/tv_ubicacion_reg2"
                android:layout_width="match_parent"
                android:padding="10dp"
                android:textSize="17sp"
                android:layout_height="wrap_content"
                android:hint="No seleccionado"
                android:textColor="@color/white"
                android:textColorHint="@color/terciarioTextColor"
                android:background="@drawable/edtback"/>
            <ImageButton
                android:layout_marginTop="5dp"
                android:id="@+id/btn_mapa_reg2"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/btn_ui"
                android:src="@drawable/ic_map_reg2"
                />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:layout_marginTop="10dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/secondaryTextColor"
                android:layout_marginTop="5dp"
                android:text="Seleccione una foto de perfil"
                android:textSize="18sp"/>
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_marginTop="15dp"
                android:id="@+id/user_img_circle"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:src="@drawable/ic_addimage_user"

                app:civ_border_width="1dp"
                app:civ_border_color="@color/white"
                android:layout_gravity="center"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/secondaryTextColor"
                android:text="Añade una descipción a tu perfil"
                android:layout_marginTop="5dp"
                android:textSize="18sp"/>
            <EditText
                android:id="@+id/edt_descripcion_user_reg2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="top"
                android:lines="6"
                android:layout_marginTop="5dp"
                android:padding="10dp"
                android:inputType="textMultiLine"
                android:textSize="17sp"
                android:maxLength="100"
                android:hint="Ingrese una descripción"
                android:textColor="@color/white"
                android:textColorHint="@color/terciarioTextColor"
                android:background="@drawable/edtback"/>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="5"
        android:padding="20dp"
        android:gravity="center">
        <Button
            android:id="@+id/btn_siguiente_reg2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:text="Siguiente"
            android:background="@drawable/btn_ui"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center"
            android:padding="5dp"
            android:orientation="horizontal"
            android:layout_height="60dp">
            <ProgressBar
                android:visibility="invisible"
                android:indeterminateDrawable="@drawable/cpb"
                android:indeterminateDuration="@android:integer/config_longAnimTime"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/progress_bar_reg2"

                />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>