<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:clickable="true"
    android:focusable="true"
    android:background="@color/white"
    tools:context=".TabItems.Donacion.InfoAlbergueFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:gravity="left"
        android:background="@color/secondaryColor"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            android:text="Donaciones realizadas: "
            android:textColor="@color/white"
            android:textSize="19dp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/tv_canDonaciones_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_marginRight="5dp"
            android:textAllCaps="true"
            android:text="0"
            android:textColor="@color/white"
            android:textSize="19dp"
            android:textStyle="bold"/>
    </LinearLayout>
    <LinearLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/tv_nombreAlbergueCategoria"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            android:text="NOMBRE DEL ALBERGUE"
            android:textColor="@color/black"
            android:textSize="19dp"
            android:textStyle="bold"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/img_albergueDonacionInfo"
                        android:layout_width="150dp"
                        android:layout_gravity="center"
                        android:layout_height="150dp"
                        android:scaleType="centerCrop"
                        android:background="@drawable/imgalberguedef"/>
                    <TextView
                        android:id="@+id/tv_desc_albergue_donacion"
                        android:layout_marginLeft="10dp"
                        android:gravity="left"
                        android:justificationMode="inter_word"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="17sp"
                        android:text="Mi nombre es Emilia y me dedico a rescatar perritos del maltrato, atropello y abandono.Mi labor empezó hace 2 años, dividiendo mi tiempo entre el trabajo,mi familia y el rescate.Tengo más de 90 perritos albergados y 10 con discapacidad. Ayúdame a ayudar."/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">
                    <View
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/backgroundcolorprimary"/>

                    <TextView
                        android:layout_marginTop="10dp"
                        android:layout_gravity="left"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Contribución no monetaria:"
                        android:textColor="@color/black"
                        android:textSize="17dp"
                        android:textStyle="bold"/>
                    <TextView
                        android:gravity="left"
                        android:layout_marginTop="5dp"
                        android:justificationMode="inter_word"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="17sp"
                        android:text="Puedes colaborarnos con alimento y artículos de limpieza. Contactenos por los siguientes medios"/>

                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:padding="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">
                        <androidx.cardview.widget.CardView
                            app:cardCornerRadius="5dp"
                            app:cardElevation="5dp"
                            android:id="@+id/btn_whatsapp"
                            android:layout_marginRight="50dp"
                            android:layout_width="100dp"
                            android:layout_height="100dp">
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/whatsapp"/>
                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            app:cardCornerRadius="5dp"
                            app:cardElevation="5dp"
                            android:id="@+id/btn_call"
                            android:layout_marginLeft="50dp"
                            android:layout_width="100dp"
                            android:layout_height="100dp">
                            <ImageView
                                android:layout_margin="10dp"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/telefono"/>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                    <View
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/backgroundcolorprimary"/>
                    <TextView
                        android:layout_marginTop="10dp"
                        android:layout_gravity="left"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Contribución monetaria:"
                        android:textColor="@color/black"
                        android:textSize="17dp"
                        android:textStyle="bold"/>
                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:padding="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">
                        <androidx.cardview.widget.CardView
                            app:cardCornerRadius="5dp"
                            app:cardElevation="5dp"
                            android:id="@+id/btn_yape"
                            android:layout_marginRight="25dp"
                            android:layout_width="150dp"
                            android:layout_height="150dp">
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/yape"/>
                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:id="@+id/btn_bcp"
                            android:layout_marginLeft="25dp"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            app:cardCornerRadius="5dp"
                            app:cardElevation="5dp">
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/bcp"/>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                    <View
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/backgroundcolorprimary"/>
                </LinearLayout>

            </LinearLayout>
        </ScrollView>

    </LinearLayout>
</LinearLayout>