                    android:id="@+id/edt_hora_edit_visita"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edtback_black"
                    android:hint="Seleccione una hora"
                    android:inputType="textNoSuggestions"
                    android:padding="10dp"
                    android:focusableInTouchMode="true"
                    android:cursorVisible="false"
                    android:focusable="false"
                    android:textColor="@color/black"
                    android:textColorHint="@color/terciarioTextColor"
                    android:textSize="17sp" />
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="left"
                android:padding="5dp"
                android:text="Ingrese algún comentario adicional:"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:textStyle="bold"/>
            <EditText
                android:id="@+id/edt_descripcion_edit_visita"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/edtback_black"
                android:gravity="top"
                android:hint="Ingrese una descripción"
                android:inputType="textMultiLine|textNoSuggestions"
                android:lines="3"
                android:maxLength="200"
                android:padding="10dp"
                android:textColor="@color/black"
                android:textColorHint="@color/terciarioTextColor"
                android:textSize="17sp" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="8"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:padding="10dp">
        <Button
            android:id="@+id/btn_actualizar_visita_edit_visita"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_ui2"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:text="Actualziar visita"/>
        <Button
            android:layout_marginTop="10dp"
            android:id="@+id/btn_cancelar_visita_edit_visita"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_ui2"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:text="Cancelar Visita"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center"
            android:padding="5dp"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <ProgressBar
                android:visibility="invisible"
                android:indeterminateDrawable="@drawable/cpb"
                android:indeterminateDuration="@android:integer/config_longAnimTime"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/progress_bar_edit_visita"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>